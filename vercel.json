{
  "version": 2,
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "client/build" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.js" }
  ],
  "rewrites": [
    {
      "source": "/((?!api/|static/).*)",
      "destination": "/index.html"
    }
  ]
}
